<!doctype html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>My Blogs</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      .card-img-top {
        height: 200px;
        object-fit: cover;
      }
      .card {
        margin-bottom: 20px;
      }
      .btn-delete {
        background-color: #dc3545;
        border-color: #dc3545;
      }
      .btn-delete:hover {
        background-color: #c82333;
        border-color: #bd2130;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
      <h1 class="text-center mb-4">My Blogs</h1>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover Image"/>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <div class="mt-auto">
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                <a href="/personal/delete/<%= blog._id %>" class="btn btn-delete">Delete</a>
                <a href="/personal/update/<%= blog._id %>" class="btn btn-secondary">Update</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
